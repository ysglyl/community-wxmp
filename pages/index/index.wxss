/* pages/index/index.wxss */

.tabContent {
  width: 100%;
  height: 100%;
}

.activityContainer {
  background: #f5f5f5;
  padding: 10rpx;
}

.typeTabTitle {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  display: flex;
  padding: 0 30rpx;
  border-bottom: 1px solid #f5f5f5;
  box-sizing: border-box;
}

.typeTabTitle > view {
  text-align: center;
  margin-right: 30rpx;
  font-size: 32rpx;
}

.typeTabTitle > view:last-child {
  margin-right: 0;
}

.typeTabTitle > view.selected {
  border-bottom: 5rpx solid #36ccf9;
  color: #000;
}

.typeTabTitle > view.unselected {
  color: #666;
}

.typeTabContent {
  background: #f5f5f5;
}

.tabTitle {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  bottom: 0;
  background: #fff;
  border-top: 1px solid #f5f5f5;
  box-sizing: border-box;
  text-align: center;
}

.tabTitle> view {
  text-align: center;
  width: 50%;
}

.tabTitle view.selected {
  color: #36ccf9;
}

.tabTitle view.unselected {
  color: #666;
}
